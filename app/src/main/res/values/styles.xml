<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Two custom themes -->    
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!-- API 1-10 theme customizations go here -->
    </style>
    
    <style name="MyAppTheme" parent="AppBaseTheme">
        <item name="android:textAppearance">@style/RadioText</item>
        <item name="android:spinnerItemStyle">@style/SpinnerSize</item>
        <item name="android:spinnerDropDownItemStyle">@style/Spinner</item>
        <item name="android:windowBackground">@color/colorYellow</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>
    
    <!-- Five custom styles -->
    <style name="TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="EditText" parent="@style/TextView" />
    
    <style name="Button" parent="@style/TextView">
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextView.Label">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    
    <style name="TextView.Label.Indent">
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="PaddingWidget">
        <item name="android:padding">10dp</item>
    </style>
    
    <style name="RadioText" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SpinnerSize" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Spinner" parent="android:Widget.DropDownItem">
        <item name="android:textSize">24sp</item>
    </style>
    
</resources>